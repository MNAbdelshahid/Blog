<h1>Update Existing Post</h1>

<%= form_with url: "/update/#{@post.id}", local: true, method: :patch do %>

	<label for="title">Title</label>
	<input type="text" name="title"
	 value=<%= @title %>
	 minlength='1' maxlength ='100' required />
	<br />
	<label for="content">Stuff Goes Here!</label>
	<textarea type="text" name="content" value=<%= @content %> style="height: 40px; width: 200px" minlength='1' maxlength ='400' required ></textarea>
	<br />
	<input type="submit" value="Patch it, baby!">


<% end %>

<br />
<h6><%= link_to "Back to Posts", :posts %></h6>
